{
  "name": "watch-memory",
  "version": "0.1.1",
  "description": "Run a node.js script and watch its memory usage on a terminal dashboard",
  "main": "index.js",
  "bin": "bin/cli.js",
  "scripts": {
    "start": "node index.js",
    "test": "mocha --recursive --exit --timeout 1000 test/**/*.test.js",
    "test:coverage": "nyc --reporter=html --report-dir .coverage mocha --recursive --exit --timeout 500 test/",
    "lint": "eslint index.js test/"
  },
  "engines": {
    "node": ">= 10"
  },
  "keywords": [
    "memory",
    "heap",
    "rss",
    "dashboard",
    "terminal",
    "blessed"
  ],
  "author": "Benoît Guérout",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bguerout/watch-memory.git"
  },
  "bugs": {
    "url": "https://github.com/bguerout/watch-memory/issues"
  },
  "homepage": "https://github.com/bguerout/watch-memory#readme",
  "dependencies": {
    "blessed": "0.1.81",
    "blessed-contrib": "4.8.21",
    "commander": "7.2.0"
  },
  "devDependencies": {
    "eslint": "7.21.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "mocha": "8.3.0",
    "nyc": "15.1.0",
    "prettier": "2.2.1",
    "wait-until": "0.0.2"
  },
  "prettier": {
    "printWidth": 120
  }
}
